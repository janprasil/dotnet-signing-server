@{
    ViewData["Title"] = "Verify email";
}

<h1>Verify your email</h1>

@{
    var verified = ViewData["Verified"] as bool? ?? false;
}

<p class="text-small">
    We sent you a verification link.
    @if (TempData["Error"] != null)
    {
    <div class="flash error">@TempData["Error"]</div>
}
@if (TempData["Info"] != null)
{
    <div class="flash info">@TempData["Info"]</div>
}
@if (verified)
{
    <div class="flash info" style="display:inline-block;margin-left:0.5rem;">Success: your email is confirmed.</div>
}
</p>
