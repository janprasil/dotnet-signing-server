@model DotNetSigningServer.Models.SignInViewModel
@{
    ViewData["Title"] = "Sign in";
    var returnUrl = ViewData["ReturnUrl"] as string;
}
<h1 class="content-box-title">Sign In</h1>

@if (TempData["Error"] != null)
{
    <div class="flash error">@TempData["Error"]</div>
}
@if (TempData["Info"] != null)
{
    <div class="flash info">@TempData["Info"]</div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="flash error">
        @Html.ValidationSummary(excludePropertyErrors: true, message: "Sign-in failed. Please check your email and    password.")
    </div>
}
<form method="post" class="auth-form">
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@returnUrl" />
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-input" />
        <span asp-validation-for="Email" class="form-validation"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-input" />
        <span asp-validation-for="Password" class="form-validation"></span>
    </div>

    <label class="form-check">
        <input asp-for="RememberMe" type="checkbox" /> Remember me
    </label>

    <button type="submit" class="btn btn-primary">Sign in</button>
</form>

<p class="muted mt-3 text-center">No account? <a href="/Account/SignUp">Sign up</a>.</p>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
