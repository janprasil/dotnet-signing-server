@model DotNetSigningServer.Models.SignInViewModel
@{
    ViewData["Title"] = "Sign in";
    var returnUrl = ViewData["ReturnUrl"] as string;
}
<h1>Sign in</h1>
@if (TempData["Error"] != null)
{
    <div class="flash error">@TempData["Error"]</div>
}
@if (TempData["Info"] != null)
{
    <div class="flash info">@TempData["Info"]</div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="flash error">
        @Html.ValidationSummary(excludePropertyErrors: true, message: "Sign-in failed. Please check your email and password.")
    </div>
}
<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@returnUrl" />
    <label>Email</label>
    <input asp-for="Email" />
    <span asp-validation-for="Email" class="muted"></span>

    <label>Password</label>
    <input asp-for="Password" type="password" />
    <span asp-validation-for="Password" class="muted"></span>

    <label style="display:flex; align-items:center; gap:0.4rem;">
        <input asp-for="RememberMe" type="checkbox" style="width:auto" /> Remember me
    </label>

    <button type="submit">Sign in</button>
</form>

<p class="muted">No account? <a href="/Account/SignUp">Sign up</a>.</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
