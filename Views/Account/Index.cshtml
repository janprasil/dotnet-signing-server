@model DotNetSigningServer.Models.User
@{
    ViewData["Title"] = "Account";
}
<h1>Account</h1>
<p class="muted mt-2 mb-3">Your profile and billing identity.</p>
<div class="card">
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Email verified:</strong> @(Model.EmailVerified ? "Yes" : "No")</p>
    <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
    <p><strong>Credits remaining:</strong> @Model.CreditsRemaining</p>
    <p><strong>Member since:</strong> @Model.CreatedAt.ToString("D")</p>
</div>
