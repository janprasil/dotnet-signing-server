@model DotNetSigningServer.Models.ErrorViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Error";
}

<section class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="h4 mb-3">Something went wrong</h1>
                    <p class="text-muted mb-3">@Model.ErrorMessage</p>
                    <p class="text-muted mb-1">Use this trace ID if you contact support:</p>
                    <pre class="bg-light p-3 rounded border mb-0"><code>@Model.TraceId</code></pre>
                </div>
            </div>
        </div>
    </div>
</section>
