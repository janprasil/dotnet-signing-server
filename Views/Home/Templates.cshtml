@model IEnumerable<DotNetSigningServer.Models.TemplateSummary>
@{
    ViewData["Title"] = "My Templates";
    Layout = "_Layout";
}

<div class="mb-4 flex justify-between items-center">
    <h1 class="content-box-title">My Templates</h1>
    <a class="btn btn-primary" href="/template-builder">New Template</a>
</div>

<div class="table-wrapper">
@if (!Model.Any())
{
    <p class="muted m-4">No templates yet. Create one to get started.</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Fields</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@(string.IsNullOrWhiteSpace(t.Name) ? "Untitled" : t.Name)</td>
                        <td>@t.FieldCount</td>
                        <td>@t.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td style="text-align:right;">
                            <a class="btn-token-action" href="@($"/template-builder?templateId={t.TemplateId}")">Edit</a>
                            <a class="btn-token-action" href="@($"/templates/{t.TemplateId}/docs")">API
                                Docs</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
}
    </div>
